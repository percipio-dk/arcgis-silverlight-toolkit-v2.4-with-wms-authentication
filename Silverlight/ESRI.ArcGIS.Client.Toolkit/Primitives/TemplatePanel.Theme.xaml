<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    xmlns:toolkit="clr-namespace:ESRI.ArcGIS.Client.Toolkit;assembly=ESRI.ArcGIS.Client.Toolkit"
xmlns:local="clr-namespace:ESRI.ArcGIS.Client.Toolkit.Primitives">

    <Style TargetType="local:TemplatePanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TemplatePanel">
                    <Grid Background="{TemplateBinding Background}" x:Name="Palette">
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>